<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %> 
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <title>BiciMundo-Home</title>
</head>
<body>
    <%- include('../partials/header.ejs') %> 
    <main>
        <div class="container-slider-mobile">
            <div class="slider">
                <div class="slider-section"><img class="slider-images" src="/images/slider-mobile-1.jpg" alt="slider-1"></div>
                <div class="slider-section"><img class="slider-images" src="/images/slider-mobile-2.jpg" alt="slider-2"></div>
            </div>
            <span class="slider-button slider-left-button"><i class="fa-solid fa-circle-arrow-left"></i></span>
            <span class="slider-button slider-right-button"><i class="fa-solid fa-circle-arrow-right"></i></span>
        </div>
        <div class="container-slider">
            <div class="slider">
                <div class="slider-section"><img class="slider-images" src="/images/slider-1.jpg" alt="slider-1"></div>
                <div class="slider-section"><img class="slider-images" src="/images/slider-2.jpg" alt="slider-2"></div>
            </div>
            <span class="slider-button slider-left-button"><i class="fa-solid fa-circle-arrow-left"></i></span>
            <span class="slider-button slider-right-button"><i class="fa-solid fa-circle-arrow-right"></i></span>
        </div>
        <section class="destacados">
            <h2 class="destacados-title">DESTACADOS</h2>
            <div class="destacados-products">
                <% highlight.forEach(product => { %>
                    <article>
                        <a class="detalle" href="/productos/detalle/<%= product.id %> ">
                            <figure>
                                <img src="/images/<%= product.image %> " alt="image-destacados">
                            </figure>
                            <h3 class="destacados-products-model"><%= product.description %> </h3>
                            <p class="destacados-products-price">$ <%= product.price %> </p>
                            <p class="destacados-products-cart">
                                Agregar al carrito
                                <i class="fa-solid fa-cart-shopping"></i>
                            </p>
                        </a>
                    </article>
                <% }) %>
            </div>
        </section>

    </main>
    <%- include('../partials/footer.ejs') %> 
</body>
</html>